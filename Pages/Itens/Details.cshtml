@page "{id:int}"
@model Itens.Details

@{
    ViewData["Title"] = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>Item</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <display-tag class="text-gray-dark">Nome:</display-tag>
            <display-label-tag for="Data.Nome" />
        </dt>
        <dd>
            <display-tag for="Data.Nome" />
            <br />
        </dd>
        <dt>
            <display-tag class="text-gray-dark">Tipo:</display-tag>
            <display-label-tag for="Data.Tipo" />
        </dt>
        <dd>
            <display-tag for="Data.Tipo" />
            <br />
        </dd>
        <dt>
            <display-tag class="text-gray-dark">Valor:</display-tag>
            <display-label-tag for="Data.Valor" />
        </dt>
        <dd>
            <display-tag for="Data.Valor" />
            <br />
        </dd>
        <dt>
            <display-tag class="text-gray-dark">Data Inclusão:</display-tag>
            <display-label-tag for="Data.DataInclusao" />
        </dt>
        <dd>
            <display-tag for="Data.DataInclusao" />
            <br />
        </dd>
        <dt>
            <display-tag class="text-gray-dark">Usuário Inclusão:</display-tag>
            <display-label-tag for="Data.LoginNome" />
        </dt>
        <dd>
            <display-tag for="Data.LoginNome" />
            <br />
        </dd>
    </dl>
</div>
<div>
    <a asp-page="Edit" asp-route-id="@Model.Data.Id">Editar</a> |
    <a asp-page="Index">Voltar para Lista</a>
</div>
